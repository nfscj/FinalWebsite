@{
    ViewBag.Title = "Home Page";
}
<link href="~/Content/HomeCSS.css" rel="stylesheet" />

<!-- Carousel
    ================================================== -->
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="4000">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/FinalWebPhotos/AboutMe.jpg" alt="Portland Oregon"/>
            <div class="container">
                <div class="carousel-caption">
                    <h1>About Me</h1>
                    <p>To learn more about me press the button below.</p>
                    <p><a class="btn btn-lg btn-primary" href="#" role="button">About Me</a></p>
                </div>
            </div>
        </div>
        <div class="item">
            <img src="~/FinalWebPhotos/Projects.jpg" alt="Device"/>
            <div class="container">
                <div class="carousel-caption">
                    <h1>Projects</h1>
                    <p>To see projects that demostrate my skills press the button below</p>
                    <p><a class="btn btn-lg btn-primary" href="/Projects" role="button">My Projects</a></p>
                </div>
            </div>
        </div>
        <div class="item">
            <img style="height:120%;" src="~/Content/BlurredSelfie.jpg" alt="Blurred Selfie" />
            <div class="container">
                <div class="carousel-caption">
                    <h1>Contact</h1>
                    <p>To contact me press the button below</p>
                    <p><a class="btn btn-lg btn-primary" href="/Projects" role="button">Contact Me</a></p>
                </div>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div><!-- /.carousel -->


<!-- Marketing messaging and featurettes
    ================================================== -->
